@model IEnumerable<Models.EF.Gallery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thư viện Ảnh
}
<div>
    <a href="@Url.Action("Create","Gallery")" class="btn btn-success">Create New</a>
</div>
<br/>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesciptionTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Desciption)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr id="row_@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesciptionTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desciption)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.Status)
                        </td>
                        <td>
                            <a data-ajax="true" data-ajax-complete="$('#row_@item.Id').remove()"
                                   data-ajax-confirm="Do you want to delete it?" data-ajax-method="Delete" 
                                   href="/Admin/Gallery/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

