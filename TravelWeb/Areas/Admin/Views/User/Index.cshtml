@model List<Models.EF.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
  Danh sách tài khoản người quản trị
}

<div>
    <a href="@Url.Action("Create","User")" class="btn btn-default">Create New User</a>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.UserId">
                        
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td>@item.PassWord</td>
                        <td>@item.Status</td>
                        <th>
                            <a href="@Url.Action("Detail", new { @id =item.UserId  })">Details</a>
                            <a href="#">Change</a>
                            @Ajax.ActionLink("Delete", "Delete", new { @id = item.UserId }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete it?",
                                   OnComplete = "$('#row_" + @item.UserId + "').remove()",
                                   HttpMethod = "Delete"

                               })
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</div>

