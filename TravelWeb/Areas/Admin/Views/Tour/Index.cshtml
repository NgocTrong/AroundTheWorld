@model List<Models.ViewModel.TourViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Tour Manager
}
<div><a href="@Url.Action("Create","Tour")" class="btn btn-default">Create New</a>
    </div>
<br />
<div class="row">
    <div class="col-lg-12">
      <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>TourId</th>
                                <th>Tour Name</th>
                                <th>Price (vnd)</th>
                                <th>
                                    Status</th>
                                <th>Tourist Destination Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.TourId">
                                    <td>@item.TourId</td>
                                    <td>@item.TourName</td>
                                        
                                    <td>@item.Price</td>
                                  
                                    <td>
                                    @item.Status</td>
                                    <td>@item.TouristDestinationName</td>
                                    <th>
                                        <a href="@Url.Action("Detail", new { @id =item.TourId  })">Details</a>
                                        <a href="#">Change</a>
                                        @Ajax.ActionLink("Delete","Delete", new { @id = item.TourId }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete it?",
                                   OnComplete = "$('#row_" + @item.TourId + "').remove()",
                                   HttpMethod = "Delete"

                               })
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
           
     
       
   


