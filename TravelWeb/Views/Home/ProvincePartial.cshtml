@model List<Models.EF.Province>

<div>
    <div class="panel panel-success">
        <div class="panel-heading"><span class="glyphicon glyphicon-search"></span> PROVINCE</div>
        <div class="panel-body">
            <ul class="nav nav-pills nav-stacked">
                
                    @foreach (var item in Model)
                    {
                        <li class="checkbox">
                            <label><input  type="checkbox" value="@item.ProvinceId" name="province" />@item.ProvinceName</label>
                        </li>
                    }
               
            </ul>


        </div>
    </div>
  
</div>